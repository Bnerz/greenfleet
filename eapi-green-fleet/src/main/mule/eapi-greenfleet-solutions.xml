	<flow name="get:\maintenance:eapi-greenfleet-solutions-config">
		<flow-ref doc:name="Flow Reference"
			doc:id="c072982f-4ce6-4aec-96db-861efa016c47"
			name="eapi-get-maintenance-flow" />
	</flow>
	<flow
		name="get:\maintenance\(id):eapi-greenfleet-solutions-config">
