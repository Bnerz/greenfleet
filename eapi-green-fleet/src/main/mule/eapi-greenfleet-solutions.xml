    </flow>
	<flow name="get:\vehicles:eapi-greenfleet-solutions-config">
		<logger level="INFO"
			message="get:\vehicles:eapi-greenfleet-solutions-config" />
	</flow>
	<flow name="get:\vehicles\(id):eapi-greenfleet-solutions-config">
		<flow-ref doc:name="Flow Reference"
			doc:id="ea056142-d467-446e-8cee-fe08a063ff81" name="eapi-get-vehicle-id" />
	</flow>
	<flow
		name="post:\accounts:application\json:eapi-greenfleet-solutions-config">
		<flow-ref doc:name="Flow Reference"
			doc:id="2fe9ea09-5525-4474-a8ed-9dd2a4986f20"
			name="eapi-post-accounts" />
	</flow>
	<flow
		name="post:\maintenance:application\json:eapi-greenfleet-solutions-config">
		<flow-ref doc:name="Flow Reference"
			doc:id="b74870de-ccd9-47d0-a0c5-cbc75767717b"
			name="eapi-post-maintenance" />
	</flow>
	<flow
		name="post:\vehicles:application\json:eapi-greenfleet-solutions-config">
		<flow-ref doc:name="Flow Reference" doc:id="eef1765b-c59b-47c7-adfd-b84885c47a0e" name="eapi-post-vehicles"/>
    </flow>
</mule>
